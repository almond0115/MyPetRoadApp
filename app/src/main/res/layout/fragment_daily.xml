<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.feature.analysis.DailyFragment">

        <TextView
            android:id="@+id/dailyBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일간 통계"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/dailyBox"/>

        <ImageView
            android:id="@+id/dailyBox"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/rectangle_analysis"
            android:layout_marginTop="45sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.492"/>

        <TextView
            android:id="@+id/dailyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평균 산책 시간 : 1시간 12분"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/dailyBox"
            app:layout_constraintStart_toStartOf="@+id/dailyBox"
            app:layout_constraintTop_toTopOf="@+id/dailyBox" />

        <TextView
            android:id="@+id/dailyDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 이동 거리 : 18.2 km"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/dailyTime"
            app:layout_constraintEnd_toEndOf="@+id/dailyBox"
            app:layout_constraintStart_toStartOf="@+id/dailyBox" />

        <TextView
            android:id="@+id/dailyCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 소모 칼로리 : 4,102 kal"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/dailyDistance"
            app:layout_constraintEnd_toEndOf="@+id/dailyBox"
            app:layout_constraintStart_toStartOf="@+id/dailyBox" />

        <TextView
            android:id="@+id/dailySteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 걸음 수 : 14324 걸음"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/dailyCalorie"
            app:layout_constraintEnd_toEndOf="@+id/dailyBox"
            app:layout_constraintStart_toStartOf="@+id/dailyBox" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/dailyViewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:foregroundGravity="center"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@+id/dailyBox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>