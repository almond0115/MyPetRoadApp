<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/walking_sliding_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:umanoOverlay="false"
        app:umanoPanelHeight="0dp"
        app:umanoParallaxOffset="0dp"
        app:umanoShadowHeight="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.naver.maps.map.MapView
            android:id="@+id/walking_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.mju.capstone.mypetRoad.views.feature.walking.WalkingFragment"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_walking_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn"
            android:layout_marginBottom="20dp"
            android:text="산책 시작"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/walking_slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거리(km)"
                android:textSize="14sp"
                android:textColor="#2B2A2A"
                app:layout_constraintStart_toStartOf="@+id/walking_slide"
                app:layout_constraintTop_toTopOf="@id/walking_slide"/>

            <View
                android:id="@+id/cross"
                android:layout_width="3px"
                android:layout_height="70px"
                android:layout_marginTop="20dp"
                android:background="#C6C6C6"
                app:layout_constraintStart_toStartOf="@id/walking_slide"
                app:layout_constraintEnd_toEndOf="@id/walking_slide"
                app:layout_constraintBottom_toBottomOf="@id/walking_slide"/>





        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</layout>